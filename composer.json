{
    "name": "k9u/php-skeleton",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Yuu Kawanami",
            "email": "yuu.kawanami@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^8.2",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "K9u\\PhpSkeleton\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "K9u\\PhpSkeleton\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --verbose",
        "lint": [
            "phpcs --standard=PSR12 src",
            "phpmd src text phpmd.xml"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
